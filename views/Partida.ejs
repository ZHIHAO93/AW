<%- include header %>

	<div class="Contenedor">
		<div class="TextoFondo"></div>

		<div class="Contenido">
			<h1>&#124Partida: <%= partida.Nombre %></h1>
			<div class="FormPanel">
				<p>
					Creado por: <span class="negrita"><%= partida.Creador %></span> <br>
                                        Jugadores: <span class="negrita"><%= partida.Participantes %></span> <br>
                                        Turno de: <span class="negrita"><%= partida.Turno %></span> <br>
                                        Turnos restantes: <span class="negrita"><%= partida.Max_turno %></span>
				</p>
			</div>
                        <h1>&#124Tablero</h1>
                        <div class="tablaPartida">
                            <table cellspacing="5">
                                <% for(var fila=0; fila < 7; fila++) { %>
                                    <tr>
                                    <% for(var columna=0; columna < 7; columna++) { %>
                                        <% if(fila === 3 && columna ===0) { %>
                                            <td><img src="../images/Start.png"></td>
                                        <% } else if(columna === 6) { %>
                                            <% if(fila === 1 || fila === 3 || fila === 5) { %>
                                                <td><img src="../images/DNK.png"></td>
                                            <% } else { %>
                                                <td>&nbsp;</td>
                                            <% } %>
                                        <% } else { %>
                                            <td>&nbsp;</td>
                                        <% } %>
                                    <% } %>
                                    </tr>
                                <% } %>
                            </table>
                        </div>
                        <h1>&#124Tus cartas</h1>
                        <div class="tablaPartida">
                            <table>
                                <tr>
                                <% for(var i=0; i < nCarta; i++){ %>
                                    <% var n = Math.floor(Math.random() * 15) + 1 %>
                                    <td><a href="/partida/<%= partida.Nombre %>/carta<%= i %>"><img src="../images/T<%= cartas[i] %>.png"></img></a></td>
                                <% } %>
                                </tr>
                            </table>
                        </div>
		</div>
		</div>
	</div>
<%- include footer %>